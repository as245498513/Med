<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('code_list')}">授权码列表</a></li>
			<li class="active"><a href="{:U('code_add')}">添加授权码</a></li>
		</ul>
		<form class="form-horizontal js-ajax-form" action="{:U('Xxt/code_add_post')}" method="post">
			<fieldset>
				<div class="control-group">
					<label class="control-label">数量</label>
					<div class="controls">
						<input type="text" name="code_number" value="" id="code_number"/>
						<span class="form-required">*(0-10,000)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">有效时间(天)</label>
					<div class="controls">
						<input type="text" name="valid_time" value="" id="valid_time"/>
						<span class="form-required">*(1-365)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">类型</label>
					<div class="controls">
						<select name="type">
							<option value="0" selected="selected">陌陌</option>
							<option value="1">微信</option>
						</select>
						<span class="form-required">*</span>
					</div>
				</div>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">添加</button>
				<a class="btn" href="javascript:history.back(-1);">返回</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>