<admintpl file="header" />
</head>
<body>
	<div class="wrap">
		<ul class="nav nav-tabs">
			<li ><a href="{:U('index')}">分组管理</a></li>
			<li class="active"><a href="{:U('add_display')}">添加分组</a></li>
		</ul>
		<form class="form-horizontal js-ajax-form" method="post" action="{:U('edit_post')}">
			<fieldset>
				<div class="control-group">
					<label class="control-label" >分组名</label>
					<div class="controls">
						<input type="text" class="input-xlarge" name="name" value="{$item['name']}">
					</div>
				</div>
				<div class="form-actions">
					<input type="hidden" class="input-xlarge" name="id" value="{$item['id']}">
					<button type="submit" class="btn btn-primary  js-ajax-submit">{:L('SAVE')}</button>
				</div>
			</fieldset>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>