<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li ><a href="{:U('order_apply_list')}">我的申请列表</a></li>
			<li class="active"><a href="{:U('order_return_confirm')}">确认换货</a></li>
		</ul>
		<form class="form-horizontal " action="{:U('order_return_confirm_post')}" method="post">
			<fieldset>
				<div class="control-group">
					<label class="control-label">原订单编号</label>
					<div class="controls">
						<input style="color: black" type="text" name="order_sn" value="{$order_info.order_sn}" id="order_sn" readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">换货数量</label>
					<div class="controls">
						<input style="color: black" type="text" name="return_goods_num"  value="{$order_info.return_goods_num}" id="return_goods_num" readonly="readonly"/>
						<span>(个)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">销售员</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{$order_info.sales_name}" id="sales_name" readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">顾客</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{$order_info.customer_name}" id="customer_name" readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">同意换货</label>
					<div class="controls">
						<input type="checkbox" name="agreet_replenish" value="1" id="agreet_replenish"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">拒绝换货</label>
					<div class="controls">
						<input type="checkbox" name="is_reject" value="1" id="is_reject"/>
					</div>
				</div>

				<div class="control-group" id="reject_reason" style="display: none">
					<label class="control-label">拒绝原因</label>
					<div class="controls">
						<textarea name="reject_reason"></textarea>
					</div>
				</div>
			</fieldset>
			<!--隐藏-->
			<input style="display: none" type="text" name="return_id" value="{$order_info.id}"/>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">提交</button>
				<a class="btn" href="javascript:history.back(-1);">关闭</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script>
        $('#is_reject').click(function(){
			if($('#is_reject').is(":checked")){
				$('#reject_reason').show();
			}else{
				$('#reject_reason').hide();
			}
		});
	</script>
</body>
</html>