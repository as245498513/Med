<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li ><a href="{:U('order_apply_list')}">我的申请列表</a></li>
			<li class="active"><a href="{:U('order_confirm')}">确认出货订单</a></li>
		</ul>
		<form class="form-horizontal " action="{:U('order_confirm_post')}" method="post">
			<fieldset>
				<div class="control-group">
					<label class="control-label">订单编号</label>
					<div class="controls">
						<input style="color: black" type="text" name="order_sn" value="{$order_info.order_sn}" id="order_sn" readonly="readonly"/>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">物品类型</label>
					<div class="controls">
						<switch name="order_info.goods_type">
							<case value="1">
								<input style="color: black" type="text"  value="陌陌" readonly="readonly"/>
							</case>
							<case value="2">
								<input style="color: black" type="text"  value="微信" readonly="readonly"/>
							</case>
						</switch>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">单价</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{$order_info.goods_price}" id="goods_price" readonly="readonly"/>
						<span>(元)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">总价</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{$order_info.order_amount}" id="order_amount" readonly="readonly"/>
						<span>(元)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">销售员</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{$order_info.sales_name}" id="sales_name" readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">顾客</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{$order_info.customer_name}" id="customer_name" readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">确认已到账</label>
					<div class="controls">
						<input type="checkbox" name="is_paid" value="1" id="is_paid"/>
						<span style="color: red">财务确认到账后勾选</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">拒绝出货</label>
					<div class="controls">
						<input type="checkbox" name="is_reject" value="1" id="is_reject"/>
					</div>
				</div>

				<div class="control-group" id="reject_reason" style="display: none">
					<label class="control-label">拒绝原因</label>
					<div class="controls">
						<textarea name="reject_reason"></textarea>
					</div>
				</div>

				<!--隐藏-->
				<input type="text" name="order_id" value="{$order_info.id}"  style="display: none"/>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">提交</button>
				<a class="btn" href="javascript:history.back(-1);">关闭</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script>
        $('#is_reject').click(function(){
			if($('#is_reject').is(":checked")){
				$('#reject_reason').show();
			}else{
				$('#reject_reason').hide();
			}
		});
	</script>
</body>
</html>