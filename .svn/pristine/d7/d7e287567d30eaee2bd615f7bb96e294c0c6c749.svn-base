<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('friend_msg_list')}">好友发消息素材</a></li>
			<li class="active">
				<a href="{:U('friend_msg_add')}">
					<if condition="$info.id neq ''">
						编辑
						<else/>
						新增
					</if>
				</a>
			</li>
		</ul>
		<form class="form-horizontal js-ajax-form" action="{:U('Source/friend_msg_add_post')}" method="post">
			<fieldset>
				<div class="control-group">
					<label class="control-label">标题</label>
					<div class="controls">
						<input type="text" name="title" value="{$info.title}" id="title"/>
						<span class="form-required">*</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">内容</label>
					<div class="controls">
						<textarea name="content">{$info.content}</textarea>
						<span class="form-required">*(注意:	好友发消息内容不能超过600字)</span>
					</div>
				</div>

				<!--隐藏-->
				<input type="text" name="edit_id" value="{$info.id}"  style="display: none"/>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">保存</button>
				<a class="btn" href="javascript:history.back(-1);">关闭</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script src="__PUBLIC__/js/uploadify/jquery.uploadify.min.js" type="text/javascript"></script>
    <script type="text/javascript">
		$(".choosefile").click(function(){
            $("#photos_edit").remove();
		});
	</script>
</body>
</html>