<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('order_apply_list')}">出货申请列表</a></li>
			<li class="active">
				<a href="{:U('order_apply_add')}">出货申请</a>
			</li>
		</ul>
		<form class="form-horizontal " action="{:U('order_apply_add_post')}" method="post">
			<fieldset>
				<div class="control-group">
					<label class="control-label">数量</label>
					<div class="controls">
						<input type="text" name="goods_num" value="{$info.goods_num}" id="goods_num"/>
						<span class="form-required">单位(个)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">单价</label>
					<div class="controls">
						<input type="text" name="goods_price" value="{$info.goods_price}" id="goods_price"/>
						<span class="form-required">单位(元)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">顾客名称</label>
					<div class="controls">
						<input type="text" name="customer_name" value="{$info.customer_name}" id="customer_name"/>
						<span class="form-required">(如:微信昵称,或QQ昵称)</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">顾客联系方式</label>
					<div class="controls">
						<select name="customer_contact_type" style="width: 80px">
							<option value="1">微信</option>
							<option value="2">QQ</option>
							<option value="3">手机号</option>
						</select>
						<input type="text" name="customer_contact" value="{$info.customer_contact}" id="customer_contact"/>
					</div>
				</div>

				<!--隐藏-->
				<input type="text" name="edit_id" value="{$info.id}"  style="display: none"/>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">保存</button>
				<a class="btn" href="javascript:history.back(-1);">关闭</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script src="__PUBLIC__/js/uploadify/jquery.uploadify.min.js" type="text/javascript"></script>
	<script src="__PUBLIC__/js/layer/layer.js"></script>

</body>
</html>