<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('moments_comments_list')}">朋友圈评论素材</a></li>
			<li class="active">
				<a href="{:U('moments_comments_add')}">
					<if condition="$info.id neq ''">
						编辑
						<else/>
						新增
					</if>
				</a>
			</li>
		</ul>
		<form class="form-horizontal js-ajax-form" action="{:U('Source/moments_comments_add_post')}" method="post">
			<fieldset class="father">
				<div class="control-group">
					<label class="control-label">标题</label>
					<div class="controls">
						<input type="text" name="title" value="{$info.title}" id="title"/>
						<span class="form-required">*</span>
					</div>
				</div>
				<if condition="$info.id neq ''">
					<foreach name="info['comments_list']" item="vo">
						<div class="control-group comments">
							<label class="control-label">评论{$vo.comments_sort}</label>
							<div class="controls">
								<textarea name="comments[]">{$vo.comments}</textarea>
								<span class="form-required">(最多900字)</span>
							</div>
						</div>
					</foreach>
					<else/>
					<div class="control-group comments">
						<label class="control-label ">评论1</label>
						<div class="controls">
							<textarea name="comments[]"></textarea>
							<span class="form-required">(最多900字)</span>
						</div>
					</div>

				</if>

				<!--隐藏-->
				<input type="text" name="edit_id" value="{$info.id}"  style="display: none"/>
			</fieldset>
			<div class="form-actions">
				<a class="btn btn-danger" href="javascript:void(0)" onclick="add_com()">增加</a>
				<a class="btn btn-danger" href="javascript:void(0)" onclick="del_com()">减少</a>
				<button type="submit" class="btn btn-primary js-ajax-submit">保存</button>
				<a class="btn" href="javascript:history.back(-1);">关闭</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script src="__PUBLIC__/js/uploadify/jquery.uploadify.min.js" type="text/javascript"></script>
    <script type="text/javascript">
		$(".choosefile").click(function(){
            $("#photos_edit").remove();
		});
		function add_com(){
			var len = $(".comments").length;
			var newdiv="<div class='control-group comments'><label class='control-label'>评论"+(len+1)+"</label><div class='controls'><textarea name='comments[]'></textarea><span class='form-required'>(最多900字)</span></div></div>";
			if(len>=10){
                 alert("最多10条评论");
			}else {
				$(".father").append(newdiv) ;
			}
		}
		function del_com(){
			var len = $(".comments").length;
			if(len>1){
				$(".comments:last").remove();
			}else{
				alert("最少1条评论");
			}

		}

	</script>
</body>
</html>