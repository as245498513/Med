<admintpl file="header" />
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li class="active"><a href="{:U('code_list')}">授权码列表</a></li>
			<li><a href="{:U('code_add')}">添加授权码</a></li>
		</ul>
		<form class="well form-search" method="post" action="{:U('code_list')}">
			授权码:
			<input type="text" name="auth_code" style="width: 100px;" value="{$auth_code}" placeholder="请输入授权码">
			<input type="submit" class="btn btn-primary" value="搜索">
			<a class="btn btn-danger" href="{:U('code_list')}">清空</a>
		</form>
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th width="50">ID</th>
					<th>授权码</th>
					<th>创建时间</th>
					<th>有效期限（天）</th>
					<th>手机序列号</th>
					<th>手机UDID</th>
					<th>使用时间</th>
					<th>类型</th>
					<th width="120">操作</th>
				</tr>
			</thead>
			<tbody>

				<foreach name="list" item="vo">
				<tr>
					<td>{$vo.id}</td>
					<td>{$vo.auth_code}</td>
					<td>{:date("Y-m-d H:i",$vo['createtime'])}</td>
					<td><if condition="$vo.valid_time eq 0">未使用</if></td>
					<td>{$vo.serial_number}</td>
					<td>{$vo.unique_id}</td>
					<td>{$vo['starttime']}</td>
					<td>{$vo.type}</td>
					<td>
					</td>
				</tr>
				</foreach>
			</tbody>
		</table>
		<div class="pagination">{$page}</div>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>