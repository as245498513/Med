<admintpl file="header"/>
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li ><a href="{:U('order_apply_list')}">已出货列表</a></li>
			<li class="active"><a href="{:U('order_return_add')}">换货申请</a></li>
		</ul>
		<form class="form-horizontal " action="{:U('order_return_add_post')}" method="post">
			<fieldset>
				<div class="control-group">
					<label class="control-label">订单编号</label>
					<div class="controls">
						<input style="color: black" type="text" name="order_sn" value="{$order_info.order_sn}" id="order_sn" readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">购买数量</label>
					<div class="controls">
						<input style="color: black" type="text" name="goods_num" value="{$order_info.goods_num}"  readonly="readonly"/>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">保质期到</label>
					<div class="controls">
						<input style="color: black" type="text"  value="{:date('Y-m-d H:i:s',$order_info['can_return_time'])}"  readonly="readonly"/>
						<span>保质期为出货后24小时内,过了保质期则不能退换</span>
					</div>
				</div>

				<div class="control-group">
					<label class="control-label">选择问题账号</label>
					<div class="controls">
						<input class="btn btn-default" type="button" value="点击浏览"  onclick="choose_account('{$order_info.order_sn}')"/>
						<ol id="show_abnormal_account">
							<notempty name="info">
								<foreach name="info.source_list" item="vo" key="k">
									<li>{$vo.title}</li>
								</foreach>
							</notempty>
						</ol>
					</div>
				</div>

				<div class="control-group" id="return_reason" >
					<label class="control-label">退换原因描述</label>
					<div class="controls">
						<textarea name="return_reason"></textarea>
					</div>
				</div>
				<!--隐藏-->
				<input type="text" name="can_return_time" value="{$order_info.can_return_time}" style="display: none" />
				<input type="text" name="sales_id" value="{$order_info.sales_id}" style="display: none" />
				<input type="text" name="customer_name" value="{$order_info.customer_name}" style="display: none" />
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">提交</button>
				<a class="btn" href="javascript:history.back(-1);">关闭</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script src="__PUBLIC__/js/layer/layer.js"></script>
	<script>
        $('#is_reject').click(function(){
			if($('#is_reject').is(":checked")){
				$('#reject_reason').show();
			}else{
				$('#reject_reason').hide();
			}
		});

		function choose_account(order_sn){
			layer.open({
				type: 2,
				area: ['600px', '400px'],
				title: '订单详情',
				fixed: false, //不固定
				maxmin: true,
				content: '{:U("SellFlow/order_goods_list")}'+'/order_sn/'+order_sn+'/submit_display/1'
			});
		}
	</script>
</body>
</html>